{
    "name": "poplr",
    "version": "1.0.0",
    "description": "A flexible and fun directory tree generator",
    "main": "src/tree-generator.js",
    "bin": {
        "poplr": "src/cli.js"
    },
    "scripts": {
        "start": "node src/cli.js",
        "prepublishOnly": "npm test",
        "postinstall": "node -e \"console.log('\\nðŸŒ³ Thanks for installing poplr! Run `poplr` to get started.\\n')\"",
        "test": "echo \"No tests specified\" && exit 0",
        "prepare": "husky install",
        "lint": "eslint src/**/*.js",
        "lint:fix": "eslint src/**/*.js --fix",
        "lint:report": "eslint src/**/*.js --output-file eslint-report.json --format json"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "files": [
        "src",
        "README.md",
        "LICENSE"
    ],
    "keywords": [
        "directory",
        "tree",
        "cli",
        "filesystem",
        "directory-structure",
        "file-tree",
        "tree-generator",
        "visualization"
    ],
    "author": "Rick Knowlton | tiny.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/rickknowlton/poplr-cli"
    },
    "bugs": {
        "url": "https://github.com/rickknowlton/poplr-cli/issues"
    },
    "homepage": "https://github.com/rickknowlton/poplr-cli#readme",
    "dependencies": {
        "bytes": "^3.1.2",
        "chalk": "^4.1.2",
        "commander": "^8.3.0",
        "figlet": "^1.8.0",
        "inquirer": "^8.2.6",
        "nanospinner": "^1.2.0"
    },
    "devDependencies": {
        "@commitlint/cli": "19.5.0",
        "@commitlint/config-conventional": "19.5.0",
        "eslint": "^8.0.0",
        "husky": "8.0.3",
        "lint-staged": "13.3.0"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
